<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainerHigh"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/dialogTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat with AI about [Bird Name]"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/closeButton"/>

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/observationContextTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"
        tools:text="Context: Tree Swallow, observed on Jan 1, 2023. Sunny day."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatMessagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="250dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_chat_message_user"/> <!-- We'll need item_chat_message_user and item_chat_message_ai -->

    <ProgressBar
        android:id="@+id/chatLoadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        style="?android:attr/progressBarStyleSmall"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/chatMessageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask the AI..."
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:background="@drawable/comment_edit_text_background"
            android:padding="12dp"/>

        <ImageButton
            android:id="@+id/sendChatMessageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:rotation="90"
            android:src="@drawable/icon_navigation_arrow"
            app:tint="?attr/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send Message"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
